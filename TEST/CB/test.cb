        def TestIf(
            count : INT32
            ) :
            INT32
        {
            if ( count <= 1 )
            {
                return 10;
            }

            if ( count <= 1 )
            {
                return 10;
            }
            else
            {
                return 20;
            }

            if ( count <= 1 )
            {
                return 10;
            }
            elsif ( count <= 2 )
            {
                return 20;
            }
            else
            {
                return 30;
            }

            if ( count >= 1
                 && count * 2
                    < count * 3 - 5 )
            {
                count
                    += TestUnless(
                           count * 3 - 5
                           - count * 2
                           );
            }
        }

